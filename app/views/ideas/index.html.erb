
<%= simple_form_for Idea.new do |f| %>
  <%= f.input :description %>
  <%= f.input :author %>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>
<br><br>

<% @ideas.each do |idea| %>
    <div class="panel panel-default">
      <div class="panel-body">
        <blackquote>
            <p><%= idea.description %></p>
            <small><%= idea.author %></small>
        </blackquote>
      </div>
    </div>

<% end %>